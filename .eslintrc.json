{
    "env": {
        "node": true,
        "browser": true,
        "amd": true
    },
    "extends": "qubyte",
    "rules": {
        "indent": ["error", 2],
        "no-extra-parens": "off",
        "no-nested-ternary": "off",
        "no-unused-vars": "off",
        "no-sync": "off",
        "strict": "off"
    },
    "globals": {
      "Promise": true,
      "XMLHttpRequest": true
    }
}
